using System;

namespace Algoproblem6
{
    class Program
    {
        static void Main(string[] args)
        {

            int SumOfSquares = 0;
            int Sum = 0;

            for (int i = 0; i <= 100; i++)
            {
                Sum += i;
                SumOfSquares +=(int) Math.Pow(i,2);
            }
            Console.WriteLine("Sum square difference number : "+((Math.Pow(Sum,2))-SumOfSquares));
            Console.ReadKey();
        }
    }
}
